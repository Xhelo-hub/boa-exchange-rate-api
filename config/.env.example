# Bank of Albania Exchange Rate API - Environment Configuration
# Copy this file to config/.env and update with your actual values

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false
LOG_LEVEL=INFO

# QuickBooks Configuration
QB_CLIENT_ID=your_quickbooks_client_id_here
QB_CLIENT_SECRET=your_quickbooks_client_secret_here
QB_REDIRECT_URI=https://yourdomain.com/auth/callback
QB_ENVIRONMENT=sandbox
QB_BASE_URL=https://sandbox-quickbooks.api.intuit.com

# Security
SECRET_KEY=your-very-secure-secret-key-here-minimum-32-characters

# Scheduler Configuration
EXCHANGE_RATE_UPDATE_INTERVAL=3600  # seconds (1 hour)
QUICKBOOKS_SYNC_INTERVAL=86400     # seconds (24 hours)

# Logging Configuration
LOG_FILE=logs/boa_api.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Optional: Database Configuration (for future use)
# DATABASE_URL=postgresql://username:password@localhost:5432/boa_exchange_rates

# Optional: Redis Configuration (for caching)
# REDIS_URL=redis://localhost:6379/0

# Application Settings
APP_NAME=BoA Exchange Rate API
APP_VERSION=1.0.0
CORS_ORIGINS=*

# Rate Limiting (requests per minute)
RATE_LIMIT=100