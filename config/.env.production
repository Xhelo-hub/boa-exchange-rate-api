# Production Environment Configuration
# Copy this to .env.production for production deployment

# Application Settings
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false
LOG_LEVEL=WARNING
ENVIRONMENT=production

# Domain and SSL
DOMAIN=your-domain.com
SSL_ENABLED=true
ALLOWED_HOSTS=your-domain.com,www.your-domain.com

# QuickBooks Online API Credentials (PRODUCTION)
QB_CLIENT_ID=your_production_client_id
QB_CLIENT_SECRET=your_production_client_secret
QB_ACCESS_TOKEN=your_production_access_token
QB_REFRESH_TOKEN=your_production_refresh_token
QB_COMPANY_ID=your_production_company_id
QB_SANDBOX=false
QB_REDIRECT_URI=https://your-domain.com/api/v1/callback

# Bank of Albania Settings
BOA_BASE_URL=https://www.bankofalbania.org
BOA_TIMEOUT=30
BOA_RETRY_ATTEMPTS=3

# Scheduler Settings
SCHEDULE_TIME=08:00
TIMEZONE=Europe/Tirane

# Security Settings
SECRET_KEY=your_very_secure_secret_key_here
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Database (Optional - for scaling)
DATABASE_URL=postgresql://user:password@localhost:5432/boa_exchange

# Monitoring and Logging
SENTRY_DSN=your_sentry_dsn_for_error_tracking
LOG_FILE=/app/logs/boa_api.log
LOG_ROTATION=daily
LOG_RETENTION_DAYS=30

# Performance Settings
WORKERS=4
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100
TIMEOUT=30